<% layout('layouts/boilerplate') %>

<div class="service-text">
    <h1>الخدمات</h1>
</div>

<div class="service-container">
    <% halfServices.forEach(halfService => { %>
        <div class="card service mb-3">
            <div class="row g-0">
                <!-- Image Column -->
                <div class="col-md-4">
                    <img class="img-fluid service-img" alt="Service Image" src="<%= halfService.image %>">
                </div>
                <!-- Details Column -->
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= halfService.title %></h5>
                        <p class="card-text"><%= halfService.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= halfService.location %></small>
                        </p>
                        <a class="btn btn-primary" href="/halfServices/<%= halfService._id %>">المزيد</a>
                    </div>
                </div>
            </div>
        </div>
    <% }) %>
</div>
