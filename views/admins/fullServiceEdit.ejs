<% layout('layouts/boilerplate')%>

<link rel="stylesheet" href="/css/global.css">
<link rel="stylesheet" href="/css/nav.css">


<div class="row">
    <h1 class="text-center" style="margin-top: 100px;">تعديل الخدمة</h1>
    <div class="col-6 offset-3">
        <form action="/fullServices/<%= fullService._id %>?_method=PUT" method="POST" novalidate class="validated-form">
            <!-- Title Field -->
            <div class="mb-3">
                <label class="form-label" for="title">العنوان</label>
                <input 
                    class="form-control" 
                    type="text" 
                    id="title" 
                    name="fullService[title]" 
                    value="<%= fullService.title %>" 
                    required
                >
                <div class="valid-feedback">يبدو جيدا</div>
            </div>

            <!-- Price Field -->
            <div class="mb-3">
                <label class="form-label" for="price">سعر الخدمة</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input 
                        type="number" 
                        step="0.01" 
                        class="form-control" 
                        id="price" 
                        placeholder="0.00" 
                        aria-label="price" 
                        aria-describedby="price-label" 
                        name="fullService[price]" 
                        value="<%= fullService.price %>" 
                        required
                    >
                    <div class="valid-feedback">يبدو جيدا</div>
                </div>
            </div>


            <!-- Submit Button -->
            <div class="mb-3">
                <button class="btn btn-info" type="submit">تعديل</button>
            </div>
        </form>
    </div>
</div>