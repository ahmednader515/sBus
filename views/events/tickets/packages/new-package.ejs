<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/css/global.css">
<link rel="stylesheet" href="/css/nav.css">

<body style="text-align: right;" class="d-flex flex-column">
    <h1 class="btn-login">طرد جديد</h1>
    
    <form action="/tickets/packages/package-new" method="POST">
        <input type="hidden" name="eventId" value="<%= event._id %>">
        <input type="text" name="packageId" value="<%= package._id %>">
        <label class="form-label" for="date">التاريخ</label>
        <input class="form-control" id="date" name="date" type="date">

        <label class="form-label" for="billNumber">رقم بوليصة الشحن</label>
        <input type="number" id="billNumber" name="billNumber" class="form-control" placeholder="مثال: 123456789">

        <label class="form-label" for="senderName">اسم الراسل</label>
        <input type="text" id="senderName" name="senderName" class="form-control" placeholder="مثال: احمد محمد">

        <label class="form-label" for="senderPhoneNumber">رقم تيليفون الراسل</label>
        <input type="text" id="senderPhoneNumber" name="senderPhoneNumber" class="form-control" placeholder="مثال: 01085901353">

        <label class="form-label" for="senderCardNumber">رقم بطاقة الراسل</label>
        <input type="text" id="senderCardNumber" name="senderCardNumber" class="form-control" placeholder="مثال: 123456789">

        <label class="form-label" for="recieverName">اسم المرسل اليه</label>
        <input type="text" id="recieverName" name="recieverName" class="form-control" placeholder="مثال: احمد محمد">

        <label class="form-label" for="recieverPhoneNumber">رقم تيليفون المرسل اليه</label>
        <input type="text" id="recieverPhoneNumber" name="recieverPhoneNumber" class="form-control" placeholder="مثال: 01085901353">

        <label class="form-label" for="packageContent">محتويات الشحنة</label>
        <input type="text" id="packageContent" name="packageContent" class="form-control">

        <label class="form-label" for="packagePrice">القيمة المدفوعة</label>
        <input type="number" id="packagePrice" name="packagePrice" class="form-control" placeholder="مثال: 50">

        <button type="submit" class="btn btn-login">حفظ</button>
    </form>
</body>