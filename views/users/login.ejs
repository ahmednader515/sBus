<% layout('layouts/boilerplate') %>
<body class="d-flex flex-column vh-100">
    <form class="validated-form" action="/login" method="POST" novalidate>

        <h1>تسجيل الدخول</h1>
    
        <div class="mb-3">
            <label class="form-label" for="username">معرف الموظف</label>
            <input class="form-control" type="text" id="username" name="username" required>
            <div class="valid-feedback">
            يبدو جيدا
            </div>
        </div>
    
        <div class="mb-3">
            <label class="form-label" for="password">كلمة السر</label>
            <input class="form-control" type="password" id="password" name="password" required>
            <div class="valid-feedback">
            يبدو جيدا
            </div>
        </div>
    
        <button class="btn btn-login">تسجيل الدخول</button>
    
    </form>

    <script>
        window.history.pushState(null, "", window.location.href);
        window.onpopstate = function () {
            window.location.replace('/owners/dashboard');
        };
      </script>
</body>
