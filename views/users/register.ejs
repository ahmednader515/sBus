<% layout('layouts/boilerplate') %>

<form class="validated-form" action="/register" method="POST" novalidate>

    <h1 class="btn-login">أنشاء حساب موظف</h1>

    <div class="mb-3">
        <label class="form-label" for="username">معرف الموظف</label>
        <input class="form-control" type="text" id="username" name="username" required>
        <div class="valid-feedback">
        يبدو جيدا
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label" for="name">اسم الموظف</label>
        <input class="form-control" type="text" id="name" name="name" required>
        <div class="valid-feedback">
        يبدو جيدا
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label" for="password">كلمة السر</label>
        <input class="form-control" type="password" id="password" name="password" required>
        <div class="valid-feedback">
        يبدو جيدا
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label" for="type">نوع الوظيفة</label>
        <select class="form-select" name="type" id="type">
            <option value="user">موظف</option> 
            <option value="admin">مشرف</option> 
            <option value="owner">مالك</option> 
        </select>
        <div class="valid-feedback">
        يبدو جيدا
        </div>
    </div>

    <button class="btn btn-login">أنشاء حساب</button>

</form>